<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基本应用程序主题。 -->
    <style name="Theme.LackVirtueRepairer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主要品牌颜色。 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要品牌颜色。 -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- 状态栏颜色。 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- 在此处自定义您的主题。 -->
    </style>

    <style name="Theme.LackVirtueRepairer.Fullscreen" parent="Theme.LackVirtueRepairer">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.LackVirtueRepairer.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.LackVirtueRepairer.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>